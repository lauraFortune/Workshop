<%= form_for(category) do |f| %>

  <h1></h1>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form"> <!--form wrapper -->
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :image_url %>
      <%= f.text_field :image_url, placeholder: 'Type image_url here', id: "imageInput", oninput: "textChanged()", required: true %>
    </div>
    <p id="feedback"></p>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div> <!--end form wrapper -->  
  
<% end %>









